<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--底部tab 样式-->
    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--底部text 样式-->
    <style name="tab_menu_text">
        <item name="android:textSize">@dimen/tab_menu_text_size</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>
    <!--mine页面item的样式-->
    <style name="mine_item">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">@dimen/mine_item_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="mine_item_label_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_mine_item</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_mine_text</item>
    </style>

    <style name="mine_item_content_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_mine_item</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!--账户editText样式-->
    <style name="edit_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/len_8</item>
        <item name="android:textColorHint">@color/edt_hint</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>


    <!--账户TextView 跳转样式-->
    <style name="txt_account">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>]
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/len_8</item>
        <item name="android:textColor">@color/def_text_account_selector</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>
    <!--账户icon ImageView样式-->
    <style name="imge_account">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/len_14</item>
        <item name="android:layout_height">@dimen/len_14</item>
    </style>

    <style name="view_div_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/div_color</item>
        <item name="android:layout_marginTop">@dimen/len_2</item>
        <item name="android:layout_marginBottom">@dimen/len_2</item>
    </style>

    <style name="btn_verify">
        <item name="android:layout_width">@dimen/len_64</item>
        <item name="android:layout_height">@dimen/len_24</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">@drawable/bg_btn_account_selector</item>
        <item name="android:textColor">@color/def_btn_text_selector</item>
        <item name="android:textSize">@dimen/font_10</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="txt_order_tab">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>