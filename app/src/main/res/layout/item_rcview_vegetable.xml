<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_112"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:gravity="center_vertical|bottom"
        android:paddingBottom="@dimen/len_16"
        android:paddingLeft="@dimen/len_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rcview_vegetable_imge"
            android:layout_width="@dimen/len_80"
            android:layout_height="@dimen/len_80"
            android:layout_marginLeft="@dimen/len_20"
            android:src="@drawable/ic_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_80"
            android:layout_marginLeft="@dimen/len_14"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rcview_vegetable_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="娃娃菜"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/rcview_vegetable_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_2"
                android:text="500g/份 | 月售56份 "
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/rcview_vegetable_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="¥6"
                android:layout_gravity="bottom"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_24" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/rcview_vegetable_sub"
                android:layout_width="@dimen/len_24"
                android:layout_height="@dimen/len_24"
                android:background="@drawable/bg_btn_account_disable"
                android:padding="6dp"
                android:src="@drawable/ic_sub"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/rcview_vegetable_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginRight="@dimen/len_8"
                android:text="1"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/font_16" />

            <ImageButton
                android:id="@+id/rcview_vegetable_add"
                android:layout_width="@dimen/len_24"
                android:layout_height="@dimen/len_24"
                android:layout_marginRight="@dimen/len_16"
                android:background="@drawable/bg_btn_account_enable"
                android:padding="6dp"
                android:src="@drawable/ic_add" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/div_color" />
</LinearLayout>