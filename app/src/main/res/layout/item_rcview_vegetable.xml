<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_128"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/rcview_vegetable_imge"
        android:layout_marginLeft="@dimen/len_20"
        android:layout_width="@dimen/len_80"
        android:layout_height="@dimen/len_80"
        android:src="@drawable/ic_defaut"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/len_14"
        android:layout_width="@dimen/len_96"
        android:layout_height="@dimen/len_80"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rcview_vegetable_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:textColor="@color/text_primary"
            android:text="娃娃菜"/>
        <TextView
            android:id="@+id/rcview_vegetable_standard"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_10"
            android:textColor="@color/text_secondary"
            android:text="500g/份 | 月售56份 " />
        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rcview_vegetable_reduce"
                android:layout_width="@dimen/len_24"
                android:layout_height="@dimen/len_24"
                android:padding="6dp"
                android:background="@drawable/bg_btn_account_disable"
                android:src="@drawable/ic_sub"/>
            <TextView
                android:id="@+id/rcview_vegetable_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/font_12"
                android:layout_gravity="center_vertical"
                android:text=" 5 "/>
            <ImageView
                android:id="@+id/rcview_vegetable_add"
                android:layout_width="@dimen/len_24"
                android:layout_height="@dimen/len_24"
                android:padding="6dp"
                android:background="@drawable/bg_btn_account_enable"
                android:src="@drawable/ic_add"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/rcview_vegetable_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_32"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="@dimen/len_24"
        android:text="¥6"/>
</LinearLayout>