<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ly_user_avatar"
        style="@style/mine_item">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:background="@drawable/ic_user"/>

        <TextView
            style="@style/mine_item_label_text"
            android:layout_centerVertical="true"
            android:text="@string/text_mine_user_avatar"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_avatar"
            android:layout_width="@dimen/len_32"
            android:layout_height="@dimen/len_32"
            android:layout_marginRight="@dimen/len_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/bg_background"/>

    <RelativeLayout
        android:id="@+id/ly_user_name"
        style="@style/mine_item">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:background="@drawable/ic_user"/>

        <TextView
            style="@style/mine_item_label_text"
            android:layout_centerVertical="true"
            android:text="@string/text_mine_user_name"/>

        <TextView
            android:id="@+id/txt_user_name"
            style="@style/mine_item_content_text"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/len_12"
            android:text="奥特曼"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/bg_background"/>

    <RelativeLayout
        android:id="@+id/ly_true_name"
        style="@style/mine_item">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:background="@drawable/ic_user"/>

        <TextView
            style="@style/mine_item_label_text"
            android:layout_centerVertical="true"
            android:text="@string/text_mine_true_name"/>

        <TextView
            android:id="@+id/txt_true_name"
            style="@style/mine_item_content_text"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/len_12"
            android:text="奥特猫"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/bg_background"/>

    <RelativeLayout
        android:id="@+id/ly_sex"
        style="@style/mine_item">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:background="@drawable/ic_sex"/>

        <TextView
            style="@style/mine_item_label_text"
            android:layout_centerVertical="true"
            android:text="@string/text_mine_sex"/>

        <TextView
            android:id="@+id/txt_sex"
            style="@style/mine_item_content_text"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/len_12"
            android:text="男"/>

    </RelativeLayout>
</LinearLayout>