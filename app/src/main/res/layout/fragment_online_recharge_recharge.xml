<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/len_16"
        android:background="@drawable/bg_btn_account_disable"
        android:orientation="vertical"
        android:padding="@dimen/len_8">

        <CheckBox
            android:paddingLeft="@dimen/len_8"
            android:id="@+id/checkbox_join_activity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/len_16"
            android:text="参加充值送礼活动"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_color"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:paddingLeft="@dimen/len_8"
                android:checked="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_48"
                android:layout_marginLeft="@dimen/len_16"
                android:text="微信支付"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/div_color"/>

            <RadioButton
                android:paddingLeft="@dimen/len_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_48"
                android:layout_marginLeft="@dimen/len_16"
                android:text="支付宝"/>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_color"/>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="@dimen/len_8"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputEditText
                android:inputType="number"
                android:textSize="@dimen/font_32"
                android:maxLines="1"
                android:paddingLeft="@dimen/len_16"
                android:paddingRight="@dimen/len_16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="充值金额"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
    android:id="@+id/btn_next_step"
    android:textColor="@color/white"
    android:text="下一步"
    android:background="@drawable/bg_btn_recharge"
    android:layout_marginRight="@dimen/len_16"
    android:layout_marginLeft="@dimen/len_16"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_48"/>

</LinearLayout>