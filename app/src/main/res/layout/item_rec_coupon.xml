<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/len_4"
                android:paddingLeft="@dimen/len_16"
                android:background="@color/white"
                android:paddingTop="@dimen/len_8">

    <RelativeLayout
        android:id="@+id/ly_title"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:background="@color/coupon_red">

        <TextView
            android:id="@+id/txt_￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_coupon_account"
            android:layout_alignParentLeft="true"
            android:text="￥"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_coupon_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/len_4"
            android:layout_toRightOf="@id/txt_￥"
            android:gravity="center|bottom"
            android:text="40"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/txt_coupon_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_coupon_account"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="满100可用"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="@dimen/len_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ly_title"
        android:layout_alignTop="@id/ly_title"
        android:layout_toRightOf="@id/ly_title">

        <TextView
            android:id="@+id/txt_coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满100减40"
            android:textColor="@color/textDark"
            android:textSize="@dimen/font_14"/>

        <TextView
            android:id="@+id/txt_coupon_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_coupon_title"
            android:text="这是优惠券"
            android:textSize="@dimen/font_12"/>

        <TextView
            android:id="@+id/txt_coupon_order_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_coupon_description"
            android:text="此优惠券只能用于：芹菜、韭菜"
            android:textSize="@dimen/font_12"/>

        <TextView
            android:id="@+id/txt_coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_coupon_order_list"
            android:text="2017.8.8-2017.10.10"
            android:textSize="@dimen/font_12"/>
    </RelativeLayout>
</RelativeLayout>