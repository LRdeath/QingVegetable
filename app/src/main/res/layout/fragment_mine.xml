<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_background"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:background="@drawable/bg_mine_layout_normal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/label_mine"
                android:textColor="@color/white"
                android:textSize="@dimen/label_text_size"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_circle_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@color/white"
                app:civ_border_color="@color/circle_shadow"
                app:civ_border_width="4dp"/>

            <TextView
                android:id="@+id/txt_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_circle_avatar"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:text="奥特曼"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_user_name"
            style="@style/mine_item">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/ic_user"/>

            <TextView
                style="@style/mine_item_label_text"
                android:layout_centerVertical="true"
                android:text="@string/text_mine_user_name"/>

            <TextView
                android:id="@+id/txt_user_name"
                style="@style/mine_item_content_text"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/img_back1"
                android:text="奥特曼"/>

            <ImageView
                android:id="@+id/img_back1"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/ic_forward"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/bg_background"/>

        <RelativeLayout
            android:id="@+id/ly_true_name"
            style="@style/mine_item">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/ic_user"/>

            <TextView
                style="@style/mine_item_label_text"
                android:layout_centerVertical="true"
                android:text="@string/text_mine_true_name"/>

            <TextView
                android:id="@+id/txt_true_name"
                style="@style/mine_item_content_text"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/img_back2"
                android:text="奥特猫"/>

            <ImageView
                android:id="@+id/img_back2"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/ic_forward"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/bg_background"/>

        <RelativeLayout
            android:id="@+id/ly_sex"
            style="@style/mine_item">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/ic_sex"/>

            <TextView
                style="@style/mine_item_label_text"
                android:layout_centerVertical="true"
                android:text="@string/text_mine_sex"/>

            <TextView
                android:id="@+id/txt_sex"
                style="@style/mine_item_content_text"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/img_back3"
                android:text="男"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:id="@+id/img_back3"
                android:background="@drawable/ic_forward"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/bg_background"/>

        <RelativeLayout
            android:id="@+id/ly_mobile"
            style="@style/mine_item">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/ic_mobile"/>

            <TextView
                style="@style/mine_item_label_text"
                android:layout_centerVertical="true"
                android:text="@string/text_mine_mobile"/>

            <TextView
                android:id="@+id/txt_mobile"
                style="@style/mine_item_content_text"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:layout_alignParentRight="true"
                android:text="15028595851"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_credit"
        style="@style/mine_item">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:background="@drawable/ic_credit"/>

        <TextView
            style="@style/mine_item_label_text"
            android:layout_centerVertical="true"
            android:text="@string/text_mine_credit"/>

        <TextView
            android:id="@+id/txt_credit_num"
            style="@style/mine_item_content_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"
            android:text="404"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/txt_contract"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/text_mine_contract"
        android:background="@color/white"
        android:textColor="@color/text_primary"
        android:textSize="14sp"/>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/txt_logout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/text_mine_exit"
        android:background="@color/white"
        android:textColor="@color/text_red"
        android:textSize="14sp"/>
</LinearLayout>