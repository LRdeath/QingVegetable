<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="@dimen/len_48"
              android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="@dimen/len_24">

        <TextView
            android:id="@+id/txt_vegetable_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_16"/>

        <android.support.v4.widget.Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:text="@string/txt_mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_16"/>

        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_16"/>


        <TextView
            android:layout_marginLeft="@dimen/len_8"
            android:text="@string/txt_RMB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_16"/>

        <TextView
            android:layout_marginRight="@dimen/len_24"
            android:id="@+id/txt_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_16"/>

    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/len_24"
        android:layout_marginLeft="@dimen/len_24"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/div_color"/>

</LinearLayout>