<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.vzer.sharevegetable.account.AccountActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_264"
        android:background="@drawable/bg_toolbar">
        <ImageView
            android:id="@+id/account_logo"
            android:layout_width="@dimen/len_80"
            android:layout_height="@dimen/len_80"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_logo"/>
        <TextView
            android:layout_marginTop="@dimen/len_8"
            android:layout_width="@dimen/len_80"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@+id/account_logo"
            android:textSize="24sp"/>
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_account_shade"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/account_container"
        android:layout_marginTop="@dimen/len_264"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</FrameLayout>
