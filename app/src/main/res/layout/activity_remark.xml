<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/len_8"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/len_16">

        <EditText
            android:id="@+id/edit_shopping_remark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_96"
            android:background="@color/yancy_grey100"
            android:gravity="top"
            android:hint="@string/shopping_remark"
            android:maxLength="50"
            android:padding="@dimen/len_8"
            android:shadowColor="@color/yancy_grey300"
            android:textSize="@dimen/font_14" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_remark_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_8"
        android:layout_marginRight="@dimen/len_8"
        android:layout_marginTop="@dimen/len_16"
        android:background="@color/colorPrimary"
        android:text="@string/make_sure"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18" />
</LinearLayout>