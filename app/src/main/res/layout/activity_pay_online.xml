<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/len_12">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/len_8"
        android:text="订单提交成功"
        android:textColor="@color/textDark"
        android:textSize="@dimen/font_18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="以下订单待付款"
        android:textColor="@color/red_dark"
        android:textSize="@dimen/font_16" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:padding="@dimen/len_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/txt_pay_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13568986565555"
            android:textColor="@color/text_red"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:gravity="center_vertical"
        android:padding="@dimen/len_8"
        android:layout_marginTop="1px"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_14"
            android:text="需要支付金额：" />

        <TextView
            android:id="@+id/txt_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:textSize="@dimen/font_14"
            android:text="248.0元" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:gravity="center_vertical"
        android:padding="@dimen/len_8"
        android:layout_marginTop="1px"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_14"
            android:text="预计到货时间：" />

        <TextView
            android:id="@+id/txt_pay_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:textSize="@dimen/font_14"
            android:text="3天内" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_12"
        android:textColor="@color/textDark"
        android:text="小提醒:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线支付订单在3小时内未完成支付将自动取消。" />

    <Button
        android:id="@+id/txt_pay_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:layout_marginTop="@dimen/len_48"
        android:layout_marginLeft="@dimen/len_24"
        android:layout_marginRight="@dimen/len_24"
        android:background="@drawable/bg_btn_defaut"
        android:textSize="@dimen/font_16"
        android:text="立即支付" />
</LinearLayout>