<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="top"
        android:background="@color/div_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginLeft="@dimen/len_24"
        android:layout_marginRight="@dimen/len_24"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/len_16"
        android:paddingTop="@dimen/len_16">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_vegetable_eva_portrait"
            android:layout_width="@dimen/len_32"
            android:layout_height="@dimen/len_32"/>
            android:src="@drawable/ic_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_vegetable_eva_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="匿名用户"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/txt_vegetable_eva_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_4"
                    android:text="2017.08.01"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/font_12" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imge_vegetable_eva_degree"
                    android:layout_width="@dimen/len_24"
                    android:layout_height="@dimen/len_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_vegetable_eva_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_8"
                android:maxLines="3"
                android:text="香菜超级好吃！！！！！！！希望下次也一样新鲜哦哦哦哦！给店主笔芯！！！然后再凑一下字数，不知道够不够，测试一下xxxx的……"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>